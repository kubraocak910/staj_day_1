// 14 TCLTimer kronometre yapıyoruz 
var 
MyForm:TclForm;
startb,stopb:TCLButton;
time: TCLTimer;
tlabel: TCLLabel;
zaman,saniye,salise:Integer;
void start
{
  time.Enabled = True;
}
void stop
{
  time.Enabled = False;
}
void show
{ Inc(zaman); /// sou varr ben bu kodun 0.1 saniyede döndüğünü nerden anladımm kod her 0.1 saniyede buraya ulaşıyor o yüzden 100 e değil 10 bölüyoruz
  salise = zaman mod 10;
  saniye =zaman div 10 ;
  tlabel.caption= IntToStr(saniye)+':'+IntToStr(salise);
}
{
zaman =0;
  MyForm=TclForm.Create(self);
  
  time=MyForm.AddNewTimer(MyForm,'time', 100);
  MyForm.AddNewEvent(time,tbeOnTimer,'show');
  
  tlabel= MyForm.AddNewLabel(MyForm,'tlabel','');
  tlabel.align=alCenter;
  
  
  
  startb=MyForm.AddNewButton(MyForm,'startb', 'start');
  startb.margins.right=200;
  MyForm.AddNewEvent(startb,tbeOnClick,'start');
  
  stopb=MyForm.AddNewButton(MyForm,'stopb', 'stop');
  stopb.margins.left=200;
  MyForm.AddNewEvent(stopb,tbeOnClick,'stop');
  
  MyForm.Run;}
  

