{
  MyForm= TclForm.Create(self);
  thscroll=MyForm.AddNewHorzScrollBox(MyForm,'thscroll');
  thscroll.align=alMostTop;
  thscroll.height=Tform(Myform).clientheight/4;
  
  tvscroll=Myform.AddNewVertScrollBox(MyForm,'tvscroll');
